#!/usr/bin/env bash
#
# Deploy the built site to a git repo
# Stolen from Tony DiPasquale
# https://github.com/tonyd256/blog/blob/master/post_build.sh

set -e

cabal build

cabal run -- clean
cabal run -- build

tmp_dir=$HOME/_tmp

mkdir $tmp_dir
git clone git@github.com:gfontenot/gfontenot.github.com.git $tmp_dir

rm -rf $tmp_dir/*

shopt -s dotglob
cp -rf _site/* $tmp_dir

cd $tmp_dir

git add --all --force || true
git commit -m "deploy $(date '+%m/%d/%y %H:%M')" || true
git push origin master

rm -rf $tmp_dir
