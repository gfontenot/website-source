#!/usr/bin/env bash
#
# Create a new post

create_stub=0

today=$(date +"%F-")

date_string=""
post_dir="drafts"
template_name="post"
org="personal"
url_string=""

while getopts ":ps" opt; do
  case $opt in
    p)
      post_dir="posts"
      date_string="$today"
      ;;
    s)
      create_stub=1
      post_dir="stubs"
      template_name="stub"
      org="thoughtbot"
      date_string="$today"
      ;;
    \?)
      echo "Invalid option: -$OPTARG" >&2
      exit 1
      ;;
    :)
      echo "Option -$OPTARG requires an argument." >&2
      exit 1
      ;;
  esac
done

printf "Post title? "
read title

if (( $create_stub )); then
  printf "Source url? "
  read url
  url_string=$'\n'"url: $url"
fi

normalized=$(echo $title | tr '[:upper:]' '[:lower:]' | tr '[:blank:]' '-')

post_path="web/$post_dir/$date_string$normalized.markdown"

cat > "$post_path" << EOF
---
title: $title
org: $org$url_string
---
EOF

echo "Created: $normalized.markdown"
$VISUAL "$post_path"
