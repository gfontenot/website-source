#!/usr/bin/env bash
#
# Create a new stub post with today's date

today=$(date +"%F")

printf "Post title? "
read title

printf "Source url? "
read url

normalized=$(echo $title | tr '[:upper:]' '[:lower:]' | tr '[:blank:]' '-')

filename="$today-$normalized.markdown"

cat > "blog/$filename" << EOF
---
title: $title
url: $url
org: thoughtbot
---
EOF

echo "Created: $filename"
